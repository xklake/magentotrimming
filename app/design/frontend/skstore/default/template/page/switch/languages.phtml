/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
<?php 
    $name_store = $this->htmlEscape(Mage::app()->getStore()->getName());
    $path_img = Mage::getBaseDir('media');
    $link_flag = Mage::getBaseUrl('media').'wysiwyg/ktmcore/languages/'.strtolower($name_store).'.png';
    $link_flag_default = Mage::getBaseUrl('media').'wysiwyg/ktmcore/languages/unknown.png';
    $filename = $path_img.'/wysiwyg/ktmcore/languages/'.strtolower($name_store).'.png';
?>
<div class="language-topbar">
    <div class="lang-curr">
        <a href="javascript:void(0)" class="title" 
            <?php if (file_exists($filename)):  ?>
                style="background-image: url(<?php echo $link_flag; ?>);"
            <?php else: ?>
                style="background-image: url(<?php echo $link_flag_default; ?>);"
            <?php endif; ?>
        ><?php echo $name_store; ?><i class="fa fa-angle-down"></i></a>
    </div>
    <div class="lang-list">
        <div class="lang-icon"><i class="icon-globe"></i></div>
        <ul>
        <?php foreach ($this->getStores() as $_lang): ?>
            <li <?php if ($_lang->getId() == $this->getCurrentStoreId()) : ?>class="active"<?php endif; ?>>
                <a href="<?php echo $_lang->getCurrentUrl() ?>">
                    <span class="lang-name"><?php echo $this->htmlEscape($_lang->getName()) ?></span>
                </a>
            </li>
        <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>