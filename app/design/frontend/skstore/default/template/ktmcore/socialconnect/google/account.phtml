                    <?php endif; ?>
                </div>
                <div class="col-2">                          
                    <?php if(!empty($status)): ?>
                    <p>
                        <?php printf($this->__('Connected as %s', '<strong>'.$status.'</strong>')) ?>
                    </p>
                    <?php endif; ?>
                    <?php if(!empty($email)): ?>
                    <p>
                        <?php printf($this->__('Email: %s', '<strong>'.$email.'</strong>')) ?>
                    </p>
                    <?php endif; ?>                
                    <?php if(!empty($googleId)): ?>
                    <p>
                        <?php printf($this->__('Google #: %s', '<strong>'.$googleId.'</strong>')) ?>
                    </p>
