 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
    $theme = $this->helper('skstore');
	$enable = $theme->getCfg("product_page/layout_extend");
	$extendDisplay = $theme->getCfg("product_page/layout_extend_display");
?>
<?php 
if ($enable): 
	if ($extendDisplay == 2): 	// Only show with product have extend attribute
		if ($theme->getExtendAttributeHtml($_product)):	?>
			<div class="product-extend clearfix">
				<div class="extend-inner">
					<?php echo $theme->getExtendAttributeHtml($_product); ?>
				</div>
			</div>
<?php	endif; ?>
<?php 	 
	else: 	// Show all product, if product have extend attribute empty replace with Static Block extend
		if ($theme->getExtendAttributeHtml($_product)):	?>
			<div class="product-extend clearfix">
				<div class="extend-inner">
					<?php echo $theme->getExtendAttributeHtml($_product); ?>
				</div>
			</div>
<?php	elseif ($theme->getExtendBlockHtml()): ?>
			<div class="product-extend clearfix">
				<div class="extend-inner">
					<?php echo $theme->getExtendBlockHtml(); ?>
				</div>
			</div>
<?php
		endif;
?>	
<?php 	
	endif;
endif;
?>

