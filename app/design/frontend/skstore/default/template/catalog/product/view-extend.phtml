    function getWidthImg() {
         WidthContainer = jQuery('.des-pos-2').width();
         paddingNum = parseInt((jQuery(this).width() - WidthContainer)/2);
         WidthText = jQuery('.des-pos-1').width();

         return parseInt(jQuery(this).width() - (WidthText + paddingNum + 60));
    }
    //alert(getWidthImg());

    function getHeightImg() {
        return getWidthImg()/2.1;
    }

    //alert(getHeightImg());

    function getSpaceImg2() {

        heightTextDes1 = jQuery('.des-pos-1').height();
        if(heightTextDes1 <= getHeightImg()/(4/3)) {
            return parseInt(getHeightImg()/(4/3) - heightTextDes1);
        }else {
            return parseInt(0);
        }
    }
    function getSpaceText2() {
        heightTextDes1 = jQuery('.des-pos-1').height();
        if(heightTextDes1 <= getHeightImg()) {
            return parseInt(getHeightImg() - heightTextDes1);
        }else {
            return parseInt(0);
        }
    }
   

