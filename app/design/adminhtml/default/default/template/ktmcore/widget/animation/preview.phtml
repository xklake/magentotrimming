<tr>
    <td class="label"></td>
    <td class="value">
        <input type="hidden" id="<?php echo $this->getElement()->getHtmlId()?>"/>
        <div class="animation-preview">
            <div class="animation-target" title="<?php echo Mage::helper('ktmwidget')->__('Animation Preview') ?>"></div>
            <a href="javascript:void(0)" class="animation-reload" title="<?php echo Mage::helper('ktmwidget')->__('Click to restart animation') ?>">
                <img src="<?php echo $this->getSkinUrl('images/reload.png') ?>"/>
            </a>
        </div>
    </td>
