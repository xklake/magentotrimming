                        <script type="text/javascript">
                            checkExpirationPeriod = function() {
                                if (jQuery("select[name='parameters[widget_type]']").val() == 'block' && jQuery("select[name='parameters[scroll]']").val() == 0) {
                                    jQuery("input[name='parameters[column]']").closest("tr").hide();
