<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<KtmCore_AjaxSwatches>
			<version>0.4.4</version>
		</KtmCore_AjaxSwatches>
	</modules>
	<global>
		<blocks>
			<KtmCore_AjaxSwatches>
				<class>KtmCore_AjaxSwatches_Block</class>
			</KtmCore_AjaxSwatches>
			<catalog>
                <rewrite>
                    <product_view_type_configurable>KtmCore_AjaxSwatches_Block_Catalog_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
			</catalog>
		</blocks>
		<helpers>
			<ajaxswatches>
                <class>KtmCore_AjaxSwatches_Helper</class>
                <resourceModel>configurableswatches_resource</resourceModel>
            </ajaxswatches>
			<ajaxswatches_resource>
				<class>KtmCore_AjaxSwatches_Model_Resource</class>
            </ajaxswatches_resource>
			<configurableswatches>
				<rewrite>
					<mediafallback>KtmCore_AjaxSwatches_Helper_Mediafallback</mediafallback>
					<productimg>KtmCore_AjaxSwatches_Helper_Productimg</productimg>
				</rewrite>
			</configurableswatches>
		</helpers>
		<models>
		    <ktmcore_ajaxswatches>
		        <class>KtmCore_AjaxSwatches_Model</class>
                <resourceModel>configurableswatches_resource</resourceModel>
		    </ktmcore_ajaxswatches>
			<configurableswatches_resource>
				<rewrite>
					<catalog_product_attribute_super_collection>KtmCore_AjaxSwatches_Model_Resource_Catalog_Product_Attribute_Super_Collection</catalog_product_attribute_super_collection>
				</rewrite>
            </configurableswatches_resource>
            
		    <configurableswatches>
		        <rewrite>
		            <observer>KtmCore_AjaxSwatches_Model_Observer</observer>
		        </rewrite>
		    </configurableswatches>
		</models>
	</global>
	<frontend>
		<routers>
			<ajaxswatches>
				<use>standard</use>
				<args>
					<module>KtmCore_AjaxSwatches</module>
					<frontName>ajaxswatches</frontName>
				</args>
			</ajaxswatches>
		</routers>
	    <layout>
	        <updates>
	            <ajaxswatches module="KtmCore_AjaxSwatches">
	                <file>ktmcore_ajaxswatches.xml</file>
	            </ajaxswatches>
	        </updates>
	    </layout>
	</frontend>
</config>
