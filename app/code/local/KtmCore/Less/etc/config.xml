<config>
    <modules>
        <KtmCore_Less>
            <version>1.0.1</version>
        </KtmCore_Less>
    </modules>
    <global>
        <blocks>
            <less>
                <class>KtmCore_Less_Block</class>
            </less>
        </blocks>
        <helpers>
            <less>
                <class>KtmCore_Less_Helper</class>
            </less>
        </helpers>
        <models>
            <less>
                <class>KtmCore_Less_Model</class>
                <resourceModel>less_mysql4</resourceModel>
            </less>
            <less_mysql4>
                <class>KtmCore_Less_Model_Mysql4</class>
                <entities>
                    <file>
                        <table>sl_less_file</table>
                    </file>
                </entities>
            </less_mysql4>
        </models>
        <resources>
            <less_setup>
                <setup>
                    <module>KtmCore_Less</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </less_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <less>
                <use>admin</use>
                <args>
                    <module>KtmCore_Less</module>
                    <frontName>less</frontName>
                </args>
            </less>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <less translate="title" module="less">
                                            <title>Less</title>
                                        </less>
                                    </children>
                                </config>
                                <less translate="title" module="less">
                                    <title>Less Files</title>
                                    <sort_order>2000</sort_order>
                                </less>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <less>
                    <file>ktmcore_less.xml</file>
                </less>
            </updates>
        </layout>
        <translate>
            <modules>
                <KtmCore_Less>
                    <files>
                        <default>KtmCore_Less.csv</default>
                    </files>
                </KtmCore_Less>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <less>
                        <type>singleton</type>
                        <class>less/observer</class>
                        <method>beforeLayoutRender</method>
                    </less>
                </observers>
            </controller_action_layout_render_before>
        </events>
        <translate>
            <modules>
                <KtmCore_Less>
                    <files>
                        <default>KtmCore_Less.csv</default>
                    </files>
                </KtmCore_Less>
            </modules>
        </translate>
    </frontend>
    <default>
        <less>
            <general>
                <enabled>1</enabled>
            </general>
        </less>
    </default>
</config>