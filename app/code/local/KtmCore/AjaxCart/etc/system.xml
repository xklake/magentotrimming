<config>
    <sections>
        <ajaxcart translate="label" module="ajaxcart">
            <label>Ktm Ajax Cart</label>
            <tab>ktmext</tab>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <ajaxcart_config translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_ajaxcart translate="label">
                            <label>Enable Ajax Cart: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_ajaxcart>
                        <enable_ajaxcompare translate="label">
                            <label>Enable Ajax Compare: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_ajaxcompare>
                        <enable_ajaxwishlist translate="label">
                            <label>Enable Ajax Wishlist: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_ajaxwishlist>
                    </fields>
                </ajaxcart_config>
                <!-- <info translate="label">
                    <label>Theme Information</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>ajaxcart/about_information</frontend_model>
                    <sort_order>150</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </info>  -->
            </groups>
        </ajaxcart>
    </sections>
</config>