<config>
    <modules>
        <KtmCore_Skstore>
            <version>1.0.1</version>
        </KtmCore_Skstore>
    </modules>
    <frontend>
        <routers>
            <skstore>
                <use>standard</use>
                <args>
                    <module>KtmCore_Skstore</module>
                    <frontName>skstore</frontName>
                </args>
            </skstore>
        </routers>
        <layout>
            <updates>
                <skstore>
                    <file>skstore.xml</file>
                </skstore>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>skstore/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
            <catalog_block_product_list_collection>
                <observers>
                    <skstore>
                        <type>model</type>
                        <class>skstore/observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </skstore>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>
    <admin>
        <routers>
            <skstore>
                <use>admin</use>
                <args>
                    <module>KtmCore_Skstore</module>
                    <frontName>skstore</frontName>
                </args>
            </skstore>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <skstore>
                    <file>skstore.xml</file>
                </skstore>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <skstore>
                        <type>singleton</type>
                        <class>skstore/observer</class>
                        <method>configSave</method>
                    </skstore>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>

            <store_edit>
                <observers>
                    <skstore>
                        <type>singleton</type>
                        <class>skstore/observer</class>
                        <method>storeEdit</method>
                    </skstore>
                </observers>
            </store_edit>
        </events>
    </adminhtml>
    <global>
        <models>
            <skstore>
                <class>KtmCore_Skstore_Model</class>
            </skstore>
            <core>
                <rewrite>
                    <layout>KtmCore_KtmMenu_Model_System_Layout_Layout</layout>
                </rewrite>
            </core>
        </models>
        <resources>
            <skstore_setup>
                <setup>
                    <module>KtmCore_Skstore</module>
                </setup>
            </skstore_setup>
        </resources>
        <blocks>
            <skstore>
                <class>KtmCore_Skstore_Block</class>
            </skstore>
        </blocks>
        <helpers>
            <skstore>
                <class>KtmCore_Skstore_Helper</class>
            </skstore>
        </helpers>
    </global>
    <default>
        <skstore>
            <header>
                <sticky_enable>1</sticky_enable>
                <hide_on_mobile>0</hide_on_mobile>
                <compare>1</compare>
                <layout>layout1</layout>
				<enable_vertical_menu_home>1</enable_vertical_menu_home>
				<logo_upload>Logo.png</logo_upload>
				<logo_retina_upload>Logo_2.png</logo_retina_upload>
				<sticky_logo>Logo_2.png</sticky_logo>
            </header>
            <menu>
                <effect>slide</effect>
                <menuleft_effect>fade</menuleft_effect>
                <home>1</home>
                <enable_custom>1</enable_custom>
                <static_identifier>custom_menu</static_identifier>
                <show_if_no_children>0</show_if_no_children>
                <label1>New</label1>
                <label2>Hot!</label2>
                <url_key>about-magento-demo-store:right</url_key>
                <static_identifier>custom_menu:right</static_identifier>
            </menu>
            <category>
                <aspect_ratio>0</aspect_ratio>
                <aspect_ratio_size>1</aspect_ratio_size>
                <alt_image>0</alt_image>
                <alt_image_column>position</alt_image_column>
                <alt_image_column_value>2</alt_image_column_value>
                <image_width>620</image_width>
                <image_height>520</image_height>
				<layer_position>1</layer_position>
				<set_layout>page/2columns-left.phtml</set_layout>
            </category>
            <category_grid>
                <column_count>3</column_count>
                <column_count_768>3</column_count_768>
                <column_count_640>2</column_count_640>
                <column_count_480>2</column_count_480>
                <equal_height>1</equal_height>
                <display_rating>2</display_rating>
                <display_addtocart>2</display_addtocart>
                <display_addtolinks>2</display_addtolinks>
                <addtolinks_simple>2</addtolinks_simple>
            </category_grid>
            <category_list>
                <addtolinks_simple>1</addtolinks_simple>
            </category_list>
            <product_page>
                <replace_upsell>1</replace_upsell>
                <zoom_enable>1</zoom_enable>
                <zoom_type>inner</zoom_type>
                <zoom_lenssize>200</zoom_lenssize>
                <upsell_hover_slider>1</upsell_hover_slider>
                <replace_related>2</replace_related>
                <related_hover_slider>1</related_hover_slider>
                <layout>default</layout>
                <product_social>1</product_social>
                <layout_extend>0</layout_extend>
				<layout_extend_display>1</layout_extend_display>
            </product_page>
            <product_labels>
                <new>new</new>
                <sale>percent</sale>
            </product_labels>
            <magento_blocks>
                <footer_newsletter>1</footer_newsletter>
                <related_products_checkbox>0</related_products_checkbox>
            </magento_blocks>
            <sidebar_blocks_home>
                <compare>0</compare>
                <compared>0</compared>
                <viewed>0</viewed>
                <wishlist>0</wishlist>
                <poll>0</poll>
                <tags>0</tags>
                <paypal>0</paypal>
            </sidebar_blocks_home>
            <install>
                <overwrite_blocks>1</overwrite_blocks>
                <overwrite_pages>1</overwrite_pages>
            </install>
            <customization>
                <custom_css>0</custom_css>
				<numsections>7</numsections>
            </customization>
        </skstore>
        <skstore_design>
            <colors>
                <primary_color>#bdb099</primary_color>
                <text_color>#393939</text_color>
                <link_color>#3b3b3b</link_color>
                <link_hover_color>#bdb099</link_hover_color>

                <button_bg_color>#bdb099</button_bg_color>
                <button_color>#ffffff</button_color>
                <button_border_color>#bdb099</button_border_color>
                <button_hover_color>#ffffff</button_hover_color>
                <button_bg_hover_color>#000000</button_bg_hover_color>
                <button_border_hover_color>#000000</button_border_hover_color>

                <background_icon_color>#2f2b0d</background_icon_color>
                <icon_color>#ee2d54</icon_color>
                <icon_border_color>#ee2d54</icon_border_color>
                <hover_background_icon_color>#2f2b0d</hover_background_icon_color>
                <hover_icon_color>#ee2d54</hover_icon_color>
                <hover_icon_border_color>#ee2d54</hover_icon_border_color>
                <price_color>#ff9933</price_color>
                <heading_color_title>#272727</heading_color_title>

            </colors>
            <font>
                <body_font_family_group>google</body_font_family_group>
                <body_font_family_custom>Arial, "Helvetica Neue", Helvetica, sans-serif</body_font_family_custom>
                <body_font_family>PT Serif</body_font_family>
                <font_size>14px</font_size>

                <headings_font_family_group>google</headings_font_family_group>
                <headings_font_family_custom>Arial, "Helvetica Neue", Helvetica, sans-serif</headings_font_family_custom>
                <headings_font_family>Montserrat</headings_font_family>

                <price_font_family_group>google</price_font_family_group>
                <price_font_family_custom>Arial, "Helvetica Neue", Helvetica, sans-serif</price_font_family_custom>
                <price_font_family>Montserrat</price_font_family>

                <primary_char_latin_ext>0</primary_char_latin_ext>
            </font>
            <page>
                <bg_color>#ebebeb</bg_color>
                <bg_image></bg_image>
                <bg_repeat>repeat</bg_repeat>
                <bg_attachment>scroll</bg_attachment>
                <bg_positionx>center</bg_positionx>
                <bg_positiony>top</bg_positiony>
                <patterns>none</patterns>
            </page>
            <header>
                <bg_top_color>#ffffff</bg_top_color>
                <patterns>none</patterns>
                <inner_bg_color>#ffffff</inner_bg_color>
                <color>#999999</color>
                <link_color>#999999</link_color>
                <link_hover_color>#000000</link_hover_color>
            </header>
            <nav>
                <inner_bg_color>#ffffff</inner_bg_color>
                <font_size>14</font_size>
                <font_uppercase>1</font_uppercase>
                <bg_color>transparent</bg_color>
                <color>#959595</color>
                <hover_bg_color>transparent</hover_bg_color>
                <hover_color>#bdb099</hover_color>

                <canvas_title_color>#ffffff</canvas_title_color>
                <canvas_bg_content_color>#2D2D2D</canvas_bg_content_color>
                <canvas_bg_color>transparent</canvas_bg_color>
                <canvas_color>#ffffff</canvas_color>
                <canvas_hover_bg_color>#3F3F3F</canvas_hover_bg_color>
                <canvas_hover_color>#fff</canvas_hover_color>

                <vertical_bg_title_color>#cfb985</vertical_bg_title_color>
                <vertical_title_color>#343434</vertical_title_color>
                <vertical_link_color>#3b3b3b</vertical_link_color>
                <vertical_link_hover_color>#d02a21</vertical_link_hover_color>

            </nav>
            <main>
                <bg_color>transparent</bg_color>
                <patterns>none</patterns>
            </main>
            <product_page>
                <addto_cart_bg_color>#bdb099</addto_cart_bg_color>
                <addto_cart_color>#ffffff</addto_cart_color>
                <addto_cart_hover_bg_color>#000000</addto_cart_hover_bg_color>
                <addto_cart_hover_color>#ffffff</addto_cart_hover_color>

                <tab_inner_bg_color>transparent</tab_inner_bg_color>
                <tab_color>#959595</tab_color>
                <tab_hover_bg_color>transparent</tab_hover_bg_color>
                <tab_hover_color>#bdb099</tab_hover_color>
                <tab_active_bg_color>transparent</tab_active_bg_color>
                <tab_active_color>#252525</tab_active_color>
                <tab_panel_bg_color>transparent</tab_panel_bg_color>
                <tab_text_color>#959595</tab_text_color>
            </product_page>
            <footer>
                <bg_color>transparent</bg_color>
                <patterns>none</patterns>
            </footer>
            <footer_top>
                <bg_color>#9b8c73</bg_color>
                <link_color>#ffffff</link_color>
                <color>#ffffff</color>
                <hover_color>#bdb099</hover_color>
            </footer_top>

            <footer_bottom>
                <bg_color>transparent</bg_color>
                <link_color>#ffffff</link_color>
                <color>#ffffff</color>
                <hover_color>#da2c2a</hover_color>
            </footer_bottom>

            <footer_copyright>
                <bg_color>#ffffff</bg_color>
                <link_active_color>#bdb099</link_active_color>
                <color>#cccccc</color>
            </footer_copyright>
        </skstore_design>
        <skstore_layout>
            <responsive>
                <responsive>1</responsive>
                <rtl_language>0</rtl_language>
                <fluid_width>1</fluid_width>
            </responsive>
        </skstore_layout>
    </default>
</config>